Algoritmo Ingremento_salarial
	Definir salario,incremento,salarionuevo Como Real;
	Escribir "Ingresa salario actual";
	Leer salario;
	incremento<-salario*0.25;
	salarionuevo<-salario+incremento;
	Escribir "Aumento de $",incremento,", por lo que el nuevo salario es igual a: $",salarionuevo;
FinAlgoritmo
